/*
*  TOOLBOX
*/

ul.toolbox, ul.toolbox ul
{
   /* Required settings */
   top:-1000px; left:-1000px; position:absolute; z-index:999;
   /* Progressive background */
   background: #FAFAFA;
   background: -moz-linear-gradient(#FAFAFA,#EAEAEA);
   background: -webkit-linear-gradient(#FAFAFA,#EAEAEA);
   -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr='#fafafa',endColorstr='#eaeaea')";
   border: 1px solid #CACACA;
}
ul.toolbox li
{
   width: 150px;
   list-style:none none outside;
   overflow:hidden; cursor:default;
}
/* IE 6/7 hack */
ul.toolbox li.separator{*margin:-1px 0 -5px 0}
ul.toolbox li.disabled{color:#999}
ul.toolbox li span.submenu{display:block; width:4px; height:11px; float:right; background:url("<%= asset_path 'bullet_arrow_right.png' %>") no-repeat 0 4px}
ul.toolbox li.disabled span.submenu{background-image:url("<%= asset_path 'bullet_arrow_right.png' %>")}
ul.toolbox li.hover{border: 1px solid #CACACA;}


.submenu{padding-left: 6px;
         margin-left: 13px;}
.submenu .no-icon{
   margin-left:20px;
}