<div id="roles_content">
  <table class="role list">
    <tr class="header">
      <th>Name</th>
      <th></th>
    </tr>
    <% @roles.each do |role| %>
      <tr class="odd_even">
        <td class="list_left name"><% if current_user.allowed_to?('edit','Roles') %>
            <%= link_to role.name, edit_role_path(role.id)%>
          <% else %>
            <%= role.name %>
          <% end %>
        </td>
        <td class="action">
          <%= link_to_with_permissions(t(:link_delete), 
            role_path(role.id), 
            @project, 
            {:method => :delete, 
              :target => 'self',
              :html => {:class => 'icon icon-del', 
                :onclick => "button_delete('#{role_path(role.id)}')"}}) %>
      </tr>
    <%end%>
  </table>
</div>
