<% if time_entry.id %>
    <%= form_for(time_entry, html: {id: 'spent-time-form', class: 'form', method: :put, remote: true}) do |f| %>
        <%= render partial: 'time_entries/log_issue_spent_time_form_content', locals: {f: f, time_entry: time_entry, issue_id: params[:issue_id]} %>
    <% end %>
<% else %>
    <%= form_for(time_entry, html: {id: 'spent-time-form', class: 'form', remote: true}) do |f| %>
        <%= render partial: 'time_entries/log_issue_spent_time_form_content', locals: {f: f, time_entry: time_entry, issue_id: params[:issue_id]} %>
    <% end %>
<% end %>


