<%= raw error_messages(@version.errors.full_messages) %>
<div class="box">
  <p>
    <label for="version_name"><%=t(:field_name)%><span class ="required"> *</span></label>
    <%= f.text_field :name, :size => 80 %>
  </p>
  <p>
    <%= f.label :description, t(:field_description) %>
    <%= f.text_area :description, :rows => 12 %>
  </p>
  <div class="splitcontentleft">
    <p>
      <label for="version_start_date"><%=t(:field_start_date)%></label>
      <%= f.text_field :start_date, :size => 6, :id => 'calendar_start' %>
    </p>
  </div>
  <div class="splitcontentright">
    <p>
      <label for="version_target_date"><%=t(:field_target_date)%></label>
      <%= f.text_field :target_date, :size => 6, :id => 'calendar' %>
    </p>
  </div>
  <div style="clear:both"></div>
</div>

<%= raw set_toolbar('version_description') %>
<script type="text/javascript">
  jQuery('#calendar_start').datepicker({dateFormat: 'dd/mm/yy'});
  jQuery('#calendar').datepicker({dateFormat: 'dd/mm/yy'});
</script>
