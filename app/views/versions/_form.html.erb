<%= raw error_messages(version.errors.full_messages) %>
<div class="box">
  <p>
    <label for="version_name"><%= t(:field_name) %><span class="required">*</span></label>
    <%= f.text_field :name, size: 20, maxlength: 20 %>
  </p>

  <p>
    <%= f.label :description, t(:field_description) %>
    <%= f.text_area :description, rows: 12, class: 'fancyEditor' %>
  </p>

  <div class="splitcontentleft">
    <p>
      <label for="version_start_date"><%= t(:field_start_date) %><span class="required">*</span></label>
      <%= f.date_field :start_date, size: 6, id: 'calendar-start' %>
    </p>
  </div>
  <div class="splitcontentright">
    <p>
      <label for="version_target_date"><%= t(:field_target_date) %></label>
      <%= f.date_field :target_date, size: 6 %>
    </p>
  </div>
  <div style="clear:both"></div>
  <p>
    <%= f.label :is_done, t(:label_is_done) %>
    <%= f.check_box 'is_done' %>
    <%= info_tag t(:info_version_is_done) %>
  </p>
</div>
