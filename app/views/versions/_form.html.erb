<%= rorganize_form_for [@project, version], wrapper: :horizontal_form, wrapper_mappings: {boolean: :horizontal_boolean}, html: {class: 'form-horizontal', multipart: true} do |f| %>

    <%= f.input :name, input_html: {maxlength: 20} %>

    <%= f.input :description, as: :text, input_html: {rows: 12, class: 'fancyEditor'} %>

    <%= f.input :start_date, as: :date, html5: true, input_html: {id: 'calendar-start'} %>
    <%= f.input :target_date, as: :date, html5: true, input_html: {id: 'calendar-start'} %>
    <%= f.input :is_done, hint: t(:info_version_is_done) %>

    <%= f.button :submit %>
<% end %>