<div id="versions_content">
  <table class="version list">
    <tr class="header">
      <th>Name</th>
      <th>Start date</th>
      <th>Target date</th>
      <th></th>
      <th></th>
    </tr>
    <% @versions.each do |version| %>
      <tr class="odd_even" id="<%= version.id %>">
        <td class="list_left name"><% if current_user.allowed_to?('edit','Versions',@project) %>
            <%= link_to version.name, edit_version_path(@project.slug, version.id)%>
          <% else %>
            <%= version.name %>
          <% end %>
        </td>
        <td class="list_center start_date"><%= version.start_date ? version.start_date : '-' %></td>
        <td class="list_center version"><%= version.target_date ? version.target_date : '-' %></td>
        <td class="action">
          <% if current_user.allowed_to?('change_position','Versions',@project) %>
            <% if version.position > 1 %>
              <%= link_to glyph('', 'arrow-up'), change_position_versions_path(@project.slug),  {:class => 'icon icon-up_arrow change_position dec'} %>
            <% else %>
              <%= link_to glyph('', 'arrow-up', 'disabled'), '#',  {:class => 'icon icon-disabled_up_arrow'} %>
            <% end %>
            <% if version.position < @max %>
              <%= link_to glyph('', 'arrow-down'), change_position_versions_path(@project.slug),  {:class => 'icon icon-down_arrow change_position inc'}  %>
            <% else %>
              <%= link_to glyph('', 'arrow-down', 'disabled'), '#',  {:class => 'icon icon-disabled_down_arrow'} %>
            <% end %>
          <% end %>
        </td>

        <td class="action">
         <%= link_to_with_permissions(glyph(t(:link_delete), 'trashcan'), version_path(@project.slug, version.id), @project, {:method => :delete, :remote => true, :confirm => t(:text_delete_item )}) %>
        </td>

      </tr>
    <%end%>
  </table>
</div>
