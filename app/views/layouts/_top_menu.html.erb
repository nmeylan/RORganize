# Top menu
%>


<%= image_tag asset_path('rorganize_logo_3.svg'), id: 'top-menu-logo' %>
<div id="account">
  <ul>
    <% if user_signed_in? %>
        <li>Welcome
          <%= link_to current_user.name, profile_path, {class: params[:controller].eql?('profiles') ? 'selected' : ''} %>
          <%= notification_link(current_user) %>
          <%= '|' if current_user.is_admin? %>
          <% icon = session['act_as'].eql?('Admin') ? 'crown' : 'person' %>
          <% switch_to = icon.eql?('crown') ? 'User' : 'Admin' %>
          <% g = icon.eql?('crown') ? medium_glyph('', icon) : glyph('', icon) %>
          <%= link_to g, act_as_profile_path, {data: {toggle: "tooltip", title: "Click to act as #{switch_to}"}} if current_user.is_admin? %>
          <%= link_to(glyph('', 'sign-out'), destroy_user_session_path, method: :delete, data: {toggle: "tooltip", title: 'Sign out'}) %>
        </li>
    <% else %>
        <li><%= link_to glyph('', 'sign-in'), new_user_session_path, data: {toggle: "tooltip", title: 'Sign in'} %></li>
    <% end %>
  </ul>
</div>

<ul id="top-menu-items">
  <% render_top_menu %>
  <%= yield :top_menu_items %>
</ul>

