<%# Overview%>

<div class="contextual">
  <h1>Welcome <%= current_user.name %></h1>
</div>

<div class="splitcontentleft">
  <div class="box">
    <div class="header"><h2><%= t(:text_my_favorites_projects) %></h2></div>
    <%= render :partial => "projects/list", :locals => {:allow_to_star => false}  %>
  </div>
</div>
<div class="splitcontentright">
  <div class="box">
    <div class="header"><h2><%=t(:label_my_latest_assigned_request)%></h2></div>
    <% if @issues %>
      <%= render :partial => "issues/list_per_project" %>
    <% else %>
    <% end %>
  </div>
  <div class="box slim">
    <div class="header"><h2><%=t(:text_my_latest_activities)%></h2></div>
    <% if @activities %>
      <%= render :partial => "my/my_activities" %>
    <% else %>
    <% end %>
  </div>
</div>
<div style="clear:both;"></div>