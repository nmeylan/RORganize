<%= form_for(@project, :url => {:controller => 'settings', :action => 'update_project_informations', :project_id => @project.slug},
             :html => {:class => 'form', :multipart => true}, :method => :put) do |f| %>
    <%= raw error_messages(@project.errors.full_messages) %>
    <div class="box">
      <p>
        <label for="project_name"><%= t(:field_name) %><span class="required"> *</span></label>
        <%= f.text_field :name, :size => 80 %>
      </p>

      <p>
        <label for="project_identifier"><%= t(:field_identifier) %><span class="required"> *</span></label>
        <%= f.text_field :identifier, :size => 80 %>
      </p>

      <p>
        <%= f.label :description, t(:field_description) %>
        <%= f.text_area :description, :class => 'fancyEditor' %>
      </p>

      <p>
        <% @trackers.settings_list %>
      </p>

      <div id="attachments">
        <p>
          <label><%= t(:field_attachments) %></label>
          <% if @project.attachments[0].new_record? %>
              <%= render :partial => 'shared/attachments', :collection => @project.attachments, locals: {object: @project, type: 'project'} %>
          <% else %>
              <%= render :partial => 'shared/show_attachments', locals: {object: @project, type: 'project', :attachments => @project.attachments, no_header: true} %>
          <% end %>
        </p>
      </div>
    </div>
    <%= submit_tag t(:button_save) %>
<% end %>