<%= contextual "#{t(:label_user)} : #{@user.name}" do %>
    <%= @user.edit_link %>
    <%= @user.delete_link %>

 <% end %>

<table class="detail" style="width:100%">
  <tr>
    <th style="width:15%"><%= t(:field_login) %> :</th>
    <td style="width:30%"><%= @user.login %></td>
    <th style="width:15%"><%= t(:label_created_at) %> :</th>
    <td style="width:30%"><%= @user.created_at %></td>
  </tr>
  <tr>
    <th style="width:15%"><%= t(:field_name) %> :</th>
    <td style="width:30%"><%= @user.caption %></td>
    <th style="width:15%"><%= t(:label_current_sign_in) %> :</th>
    <td style="width:30%"><%= @user.current_sign_in%></td>
  </tr>
  <tr>
    <th style="width:15%"><%= t(:field_email) %> :</th>
    <td style="width:30%"><%= @user.email %></td>
    <th style="width:15%"><%= t(:label_last_sign_in) %> :</th>
    <td style="width:30%"><%= @user.sign_in %></td>
  </tr>
  <tr>
    <th style="width:15%"><%= t(:field_administrator) %> :</th>
    <td style="width:30%"><%= @user.display_is_admin %></td>
  </tr>
</table>

<%= @user.display_history(@history) %>