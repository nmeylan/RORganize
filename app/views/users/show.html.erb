<%= contextual nil do %>
    <h1 class="avatar">
      <%= @user_decorator.display_avatar('', :medium) %>
      <%= link_to @user_decorator.name, view_profile_path(@user_decorator.slug), style: 'color: inherit;font-size: inherit;vertical-align: middle;' %>
    </h1>
    <div class="splitcontentright">
      <%= @user_decorator.edit_link %>
      <%= @user_decorator.delete_link %>
    </div>
<% end %>

<table class="detail" style="width:100%">
  <tr>
    <th style="width:15%"><%= t(:field_login) %> :</th>
    <td style="width:30%"><%= @user_decorator.login %></td>
    <th style="width:15%"><%= t(:label_created_at) %> :</th>
    <td style="width:30%"><%= @user_decorator.register_on %></td>
  </tr>
  <tr>
    <th style="width:15%"><%= t(:field_name) %> :</th>
    <td style="width:30%"><%= @user_decorator.caption %></td>
    <th style="width:15%"><%= t(:label_current_sign_in) %> :</th>
    <td style="width:30%"><%= @user_decorator.current_sign_in %></td>
  </tr>
  <tr>
    <th style="width:15%"><%= t(:field_email) %> :</th>
    <td style="width:30%"><%= @user_decorator.email %></td>
    <th style="width:15%"><%= t(:label_last_sign_in) %> :</th>
    <td style="width:30%"><%= @user_decorator.sign_in %></td>
  </tr>
  <tr>
    <th style="width:15%"><%= t(:field_administrator) %> :</th>
    <td style="width:30%"><%= @user_decorator.display_is_admin %></td>
  </tr>
</table>

<%= @user_decorator.display_history(@history) %>