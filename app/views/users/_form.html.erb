<%= rorganize_form_for user, wrapper: :horizontal_form, wrapper_mappings: {boolean: :horizontal_boolean},html: {class: 'form-horizontal', multipart: true} do |f| %>
    <%= raw error_messages(user.errors.full_messages) %>

    <%= f.input :login, input_html: {maxlength: 50} %>
    <%= f.input :name, input_html: {maxlength: 50} %>
    <%= f.input :email, input_html: {maxlength: 255} %>

      <% unless user.id %>
        <%= f.input :password %>
      <% end %>

    <%= f.input :admin, as: :boolean %>

    <%= f.button :submit %>
<% end %>