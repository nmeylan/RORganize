<div class="overlayOuter" id="delete-overlay">
  <div class="overlayInner">
    <% if collection_deletion && collection_deletion.any? %>
        <%= form_tag({}, remote: true, methode: :delete) do -%>
            <% collection_deletion.each do |item| %>
                <%= "##{item.sequence_id} -" %><%= link_to item.caption, {action: 'show', id: item.sequence_id} %>
                <%= hidden_field_tag 'delete_ids[]', item.sequence_id %>
                <br/>
            <% end %>
            <div class="overlayButtons">
              <%= submit_tag 'Ok' %>
              <input type="button" class="close" value="<%= t(:button_close) %>">
            </div>
        <% end %>
    <% else %>
        <%= t(:text_not_owner_deletion) %>
    <% end %>
  </div>
</div>

