<%= raw error_messages(@permission.errors.full_messages) %>
<div class="box">
  <div class="autocomplete-combobox cbb-medium nosearch">
    <label for="controller_name"><%=t(:field_controller_name)%><span class ="required"> *</span></label>
    <%= f.select :controller, @controllers.collect{|controller| [controller, controller]}, { :include_blank => false }, {:class => 'chzn-select cbb-medium'} %>
  </div>
  <p>
    <label for="action_name"><%=t(:field_action_name)%><span class ="required"> *</span></label>
    <%= f.text_field :action, :size => 80 %>
  </p>
  <p>
    <label for="name"><%=t(:field_permission_name)%><span class ="required"> *</span></label>
    <%= f.text_field :name, :size => 80 %>
  </p>

</div>