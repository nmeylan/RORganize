<%= rorganize_form_for permission_decorator, wrapper: :horizontal_form, wrapper_mappings: {boolean: :horizontal_boolean}, html: {class: 'form-horizontal', multipart: true} do |f| %>
    <%= raw error_messages(permission_decorator.errors.full_messages) %>

    <%= f.input :controller, collection: controllers.collect { |controller| [controller, controller] }, include_blank: false, input_html: {class: 'chzn-select cbb-medium', disabled: permission_decorator.is_locked} %>

    <%= f.input :action, input_html: {disabled: permission_decorator.is_locked} %>

    <%= f.input :name %>

    <%= f.button :submit %>
<% end %>