<%= content_tag :div, class: 'block' do %>
    <%= content_tag :div, class: 'header' do %>
        <%= content_tag :span, {class: 'author'} do %>
            <%= link_to(journal.user.caption, url_for(controller: 'rorganize', action: 'view_profile', user: journal.user.slug, only_path: false)) %>
        <% end %>
        <%= " #{t(:label_created).downcase} #{model.class.to_s.downcase} " %>
        <%= link_to(model.caption, url_for(controller: @notification.model_url[:controller], action: @notification.model_url[:action],
                                           id: model.id, project_id: @notification.model_url[:project_id], only_path: false)) %>
        <%= ' on ' %>
        <%= content_tag :span, journal.created_at.strftime(Rorganize::TIME_FORMAT), {class: 'history-date'} %>
    <% end %>
    <% if model.class.to_s.eql? 'Issue' %>
        <%= render partial: 'issue_creation_email', locals: {model: model} %>
    <% elsif model.class.to_s.eql? 'Document' %>
        <%= render partial: 'document_creation_email', locals: {model: model} %>
    <% end %>
<% end %>