<%= contextual "Sign up" %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form'}) do |f| %>
    <%= raw error_messages(resource.errors.full_messages) %>
    <div class="box">
      <p>
        <label for="user_login"><%= t(:field_login) %><span class="required"> *</span></label>
        <%= f.text_field :login, :size => 50 %>
      </p>

      <p>
        <label for="user_name"><%= t(:field_name) %><span class="required"> *</span></label>
        <%= f.text_field :name, :size => 50 %>
      </p>

      <p>
        <label for="user_email"><%= t(:field_email) %><span class="required"> *</span></label>
        <%= f.text_field :email, :size => 50 %>
      </p>

      <p>
        <label for="password"><%=t(:password)%><span class ="required"> *</span></label>
        <%= f.password_field :password, autocomplete: "off", :size => 50 %></p>

      <p>
        <label for="password_confirmation"><%=t(:password_confirmation)%><span class ="required"> *</span></label>
        <%= f.password_field :password_confirmation, autocomplete: "off", :size => 50 %>
      </p>
    </div>
    <div><%= f.submit 'Sign up' %></div>
<% end %>
