<%= contextual 'Change your password' %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put, class: 'form'}) do |f| %>
    <div class="box">
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <p><%= f.label :password, 'New password' %>
        <%= f.password_field :password %></p>

      <p><%= f.label :password_confirmation, 'Confirm new password' %><br/>
        <%= f.password_field :password_confirmation %></p>

      <%= f.submit 'Change password' %> <%= render partial: 'devise/shared/links' %>
    </div>
<% end %>

