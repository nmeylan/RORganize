var link;
<% if is_starred %>
    link = "<%= escape_javascript link_to(glyph(t(:link_unstar), 'star'), star_project_my_index_path(id), {:class => 'icon icon-fav starred star', :method => :post, :remote => true}) %>";
<% else %>
    link = "<%= escape_javascript link_to(glyph(t(:link_star), 'star'), star_project_my_index_path(id), {:class => 'icon icon-fav-off star', :method => :post, :remote => true})%>";
<%end %>

$(".project#<%= id%> button").html(link);