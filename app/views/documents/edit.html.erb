<div class="contextual">
  <h1><%= t(:link_new_document) %></h1>
</div>

<%= form_for(@document, :url => document_path, :method => :put, :html => {:class => 'form',:multipart => true}) do |f| %>
  <%= render :partial => "documents/form", :locals => {:f => f}%>
  <%= submit_tag t(:button_save) %>
<% end %>
