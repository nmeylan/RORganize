<%= rorganize_form_for [@project, document_decorator.model], wrapper: :horizontal_form, html: {class: 'form-horizontal', multipart: true} do |f| %>
    <%= raw error_messages(document_decorator.errors.full_messages) %>

    <%= f.input :name, maxlength: 254 %>
    <%= f.input :description, as: :text, input_html: {rows: 12, class: 'fancyEditor'} %>

    <%= f.input :version_id, collection: project.active_versions, input_html: {class: 'chzn-select cbb-medium'}, control_class: "col-sm-3" %>
    <%= f.input :category_id, collection: project.categories, input_html: {class: 'chzn-select cbb-medium'} %>

    <%= render "shared/attachment_form_block", model_decorator: document_decorator %>


    <%= f.button :submit %>
<% end %>