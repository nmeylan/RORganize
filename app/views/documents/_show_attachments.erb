%>
<% if @document.attachments .any? %>
  <div class="separator"></div>
  <h2><%= t(:field_attachments) %> :</h2>
  <% for attachment in attachments %>
    <p>
      <% if attachment.file_content_type.include?('image')  %>
        <a href="<%=attachment.file.url(:large)%>" class="lightbox"><%= image_tag attachment.file.url(:thumb) %></a>
      <% else %>
        <%= link_to attachment.file_file_name,{:action => 'download_attachment', :controller => 'documents', :path => attachment.file.path}, {:class => "icon-file #{attachment.file_content_type.gsub(/\//,'-')}"} %>
      <% end %>
      <%= link_to t(:link_delete), '#', {:class => 'icon icon-del', :onclick => "button_delete('#{url_for(:action => 'delete_attachment', :controller => 'documents', :id => @document.id,:attachment_id => attachment.id, :project_id => @project.identifier)}')"} if current_user.allowed_to?('delete_attachment','Documents',@project)%>
    </p>
  <% end %>
<% end %>