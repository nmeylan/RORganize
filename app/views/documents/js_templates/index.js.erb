jQuery('#delete_overlay').overlay();
jQuery('#delete_overlay').overlay().close();
on_replace_effect("#documents_content", "<%= escape_javascript(render :partial => 'documents/list')%>");
on_replace_effect("#document_filter", "<%= escape_javascript(filter_tag('document', Document.filtered_attributes, documents_path(@project.slug)) )%>");


uniq_toogle("#document.toggle", ".content");
documents_index({dom_persisted_filter:"<%= json_escape escape_javascript(session["#{@project.slug}_controller_documents_filter_params"].to_json.html_safe)%>"});
<% if params[:filter] %>
$('#document.toggle').switchClass('icon-collapsed', 'icon-expanded');
$('#document.toggle .octicon-chevron-right').switchClass('octicon-chevron-right', 'octicon-chevron-down');
$('#document_filter .content').show();
<% end %>