<%= link_to t(:link_this_month), activity_filter_projects_path(@project.slug, 'tm'),
    {:class => "activities_filter #{session['project_activities_filter'][1].eql?('tm') ? 'selected' : ''}",
    :id => 'tm', :remote => true, :method => :post} %> |
  <%= link_to t(:link_last_three_month), activity_filter_projects_path(@project.slug, 'ltm'),
    {:class => "activities_filter #{session['project_activities_filter'][1].eql?('ltm') ? 'selected' : ''}",
    :id => 'ltm', :remote => true, :method => :post} %> |
  <%= link_to t(:link_last_six_month), activity_filter_projects_path(@project.slug, 'lsm'),
    {:class => "activities_filter #{session['project_activities_filter'][1].eql?('lsm') ? 'selected' : ''}",
