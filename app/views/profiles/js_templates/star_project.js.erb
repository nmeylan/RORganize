var link;
<% if is_starred %>
link = "<%= escape_javascript link_to(glyph(t(:link_unstar), 'star'), star_project_profile_path(id), {class: 'icon icon-fav starred star star-button button', method: :post,
remote: true, data: {toggle: "tooltip", title: t(:text_unstar)}}) %>";
<% else %>
link = "<%= escape_javascript link_to(glyph(t(:link_star), 'star'), star_project_profile_path(id), {class: 'icon icon-fav-off star star-button button', method: :post, remote: true, data: {toggle: "tooltip", title: t(:text_star)}})%>";
<%end %>
$(".project#<%= id %> a.star-button").replaceWith(link);