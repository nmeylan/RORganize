<%= contextual "#{t(:label_query)} : # #{@query.id}" do %>
    <%= link_to_with_permissions(glyph(t(:link_edit), 'pencil'), edit_query_path(@query.id), nil, {:class => 'icon icon-edit'}) %>
<% end %>
<table class="detail" style="width:100%">
  <tr>
    <th style="width:10%"><%= t(:field_name) %> :</th>
    <td style="width:90%"><%= @query.name %></td>
  </tr>
  <tr>
    <th style="width:10%"><%= t(:field_is_public) %> :</th>
    <td style="width:90%"><%= @query.is_public %></td>
  </tr>
  <tr>
    <th style="width:10%"><%= t(:field_is_for_all) %> :</th>
    <td style="width:90%"><%= @query.is_for_all %></td>
  </tr>
</table>

<br/>
<hr/><br/>
<h2><%= t(:field_description) %> :</h2>
<%= raw !@query.description.eql?('') ? textile_to_html(@query.description) : '-' %>