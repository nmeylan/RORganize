<% is_home_page ||= false %>
<%= rorganize_form_for [@project, wiki_page_decorator], url: url, wrapper: :horizontal_form, html: {class: 'form-horizontal', multipart: true} do |f| %>
    <%= raw error_messages(wiki_page_decorator.errors.full_messages) %>
    <%= hidden_field_tag 'wiki[home_page]', is_home_page %>
    <%= f.input :title %>

    <%= f.input :content, as: :text, input_html: {rows: 20, class: 'fancyEditor'} %>

    <%= f.button :submit %>
<% end %>