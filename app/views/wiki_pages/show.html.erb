<div class="contextual">
  <h1><%= t(:link_pages) %></h1>
  <%= display_parent_breadcrumb(@wiki_page, @project.slug, nil) %>
  <div class="splitcontentright">
    <% if current_user.allowed_to?('new', 'Wiki_pages', @project) %>
      <%= link_to t(:link_new_sub_page), new_sub_page_wiki_pages_path(@project.slug, @wiki_page.slug), {:class => "icon icon-copy"} %>
    <% end %>  
    <%= link_to_with_not_owner_permissions(
      t(:link_edit), 
      edit_wiki_page_path(@project.slug,@wiki_page.slug), 
      @project, 
      @wiki_page.author_id, 
      {:method => :get, 
        :html => {:class => 'icon icon-edit'}}) %>
    <%= link_to_with_not_owner_permissions(
      t(:link_delete), 
      wiki_page_path(@project.slug, @wiki_page.slug), 
      @project, 
      @wiki_page.author_id, 
      {:method => :delete, 
        :target => "self",
        :html => {:class => 'icon icon-del',
          :onclick => "button_delete('#{wiki_page_path(@project.slug, @wiki_page.slug)}')"}}) %>
  </div>
</div>
<%= render :partial => 'wiki/sidebar' %>

<%= render :partial => "wiki_pages/page_content", :locals => {:page => @wiki_page} %>
<% if @wiki_page.sub_pages.any? %>
  <%= render :partial => 'wiki_pages/sub_pages', :locals => {:page => @wiki_page} %>
<% end %>