<%= contextual t(:link_pages) do %>
  <%= display_parent_breadcrumb(@wiki_page, @project.slug, nil) %>

    <% if current_user.allowed_to?('new', 'Wiki_pages', @project) %>
      <%= link_to glyph(t(:link_new_sub_page), 'diff'), new_sub_page_wiki_pages_path(@project.slug, @wiki_page.slug)%>
    <% end %>  
    <%= link_to_with_not_owner_permissions(glyph(t(:link_edit), 'pencil'), edit_wiki_page_path(@project.slug,@wiki_page.slug), @project, @wiki_page.author_id, {:method => :get}) %>
    <%= link_to_with_not_owner_permissions(glyph(t(:link_delete), 'trashcan'), wiki_page_path(@project.slug, @wiki_page.slug), @project, @wiki_page.author_id, {:method => :delete, :remote => true, :confirm => t(:text_delete_item )}) %>
 <% end %>
<%= render :partial => 'wiki/sidebar' %>

<%= render :partial => 'wiki_pages/page_content', :locals => {:page => @wiki_page} %>
<% if @wiki_page.sub_pages.any? %>
  <%= render :partial => 'wiki_pages/sub_pages', :locals => {:page => @wiki_page} %>
<% end %>