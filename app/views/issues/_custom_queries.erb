<% if @custom_queries && @custom_queries.to_a.any? && current_user.allowed_to?('apply_custom_query','Issues',@project)  %>
  <h2><%= t(:label_queries) %></h2>
  <ul>
    <% @custom_queries.each do |query| %>
      <li>
        <%= link_to query.name, {:action => 'apply_custom_query',
          :query_id => query.slug,
          :controller => 'issues',
          :project_id => @project.slug} %>
      </li>
    <% end %>
  </ul>
<% end %>