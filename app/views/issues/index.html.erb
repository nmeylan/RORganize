<%= contextual @issues_decorator.filtered_collection_contextual_title(t(:label_issue_plural)) do %>
    <%= @issues_decorator.new_link %>
<% end %>

<%= issue_list_type_nav %>
<%= filter_tag('issue', Issue.filtered_attributes, project_issues_path(@project.slug, query_id: params[:query_id]), true, {user: User.current, project: @project, filter_content: session["#{@project.slug}_controller_issues_filter"], type: 'Issue'}) %>
<%= clear_both %>

<%= @issues_decorator.display_collection %>
<ul id="issues-toolbox" data-role="toolbox" class="jeegoocontext box toolbox"></ul>
<%# OVERLAY renderer %>
<%= render partial: 'shared/delete_modal', locals: {collection_deletion: nil} %>

<%= render partial: 'issues/sidebar', locals: {custom_queries_decorator: @custom_queries_decorator, project: @project, selected_query: @query} %>


