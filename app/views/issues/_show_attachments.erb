<% if @issue.attachments .any? %>
  <div class="separator"></div>
  <h2><%= t(:field_attachments) %> :</h2>
  <% for attachment in attachments %>
    <p id="<%= attachment.id %>">
      <% if attachment.file_content_type.include?('image')  %>
        <a href="<%=attachment.file.url(:large)%>" class="lightbox"><%= image_tag attachment.file.url(:thumb) %></a>
      <% else %>
        <%= link_to glyph(attachment.file_file_name,attachment.icon_type),{:action => 'download_attachment', :controller => 'issues', :path => attachment.file.path}, {} %>
      <% end %>
      <%= link_to_with_permissions glyph(t(:link_delete), 'trashcan'), delete_attachment_issues_path(@project.slug,attachment.id), @project, {:remote => true, :confirm => t(:text_delete_item ), :method => :delete}%>
    </p>
  <% end %>
<% end %>