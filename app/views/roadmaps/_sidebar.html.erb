<%= content_for :sidebar do %>
  <h2><%= t(:link_versions) %></h2>
  <ul>
    <% @versions.each do |version| %>
      <li><%= link_to version.name, "#v-#{version.id ? version.id : 'unplanned'}" %></li>
    <% end %>
  </ul>
  <h2><%= t(:label_report_plural) %></h2>
  <ul>
    <li>
      <%= link_to t(:label_calendar), {:controller => 'roadmaps', :action => 'calendar', :project_id => @project_decorator.slug} %>
    </li>
    <li>
      <%= link_to t(:label_gantt_chart), {:controller => 'roadmaps', :action => 'gantt', :project_id => @project_decorator.slug} %>
    </li>
  </ul>
<% end %>
